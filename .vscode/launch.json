  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceFolder}",
      "args": [
        "-i"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/bin/cli.js",
      "cwd": "${workspaceFolder}/../azure-rest-api-specs/specification",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}