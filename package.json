{
  "name": "@azure/avocado",
  "version": "0.3.1",
  "description": "A validator of OpenAPI configurations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "bin/cli.js",
    "dist/*.d.ts",
    "dist/*.d.ts.map",
    "dist/*.js",
    "dist/*.js.map",
    "src/*.ts"
  ],
  "bin": {
    "avocado": "./bin/cli.js"
  },
  "scripts": {
    "integration": "tsc && cd ../azure-rest-api-specs/ && node ../avocado/bin/cli.js",
    "cli": "tsc && node ./bin/cli.js",
    "tsc": "tsc",
    "prettier": "prettier ./src/**/*.ts",
    "tslint": "tslint --project ./",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "test": "tsc && tslint --project ./ && nyc mocha ./dist/test/*.js --reporter mocha-multi-reporters --reporter-options configFile=mocha-multi-reporters.json",
    "prepack": "npm install && tsc"
  },
  "nyc": {
    "reporter": [
      "html",
      "text",
      "cobertura"
    ],
    "include": [
      "dist/*.js"
    ],
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/avocado.git"
  },
  "keywords": [
    "openapi",
    "validator"
  ],
  "author": "Microsoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Azure/avocado/issues"
  },
  "homepage": "https://github.com/Azure/avocado#readme",
  "dependencies": {
    "@azure/openapi-markdown": "^0.9.0",
    "@ts-common/async-iterator": "^0.2.0",
    "@ts-common/commonmark-to-markdown": "^1.2.0",
    "@ts-common/fs": "^0.2.0",
    "@ts-common/json-parser": "^0.7.0",
    "@ts-common/string-map": "^0.3.0",
    "@types/js-yaml": "^3.12.1",
    "js-yaml": "^3.13.1",
    "node-object-hash": "^1.4.2"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.10.4",
    "mocha": "^6.0.2",
    "mocha-junit-reporter": "^1.21.0",
    "mocha-multi-reporters": "^1.1.7",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^5.5.2",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.2"
  }
}
