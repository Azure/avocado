{
  "name": "@azure/avocado",
  "version": "0.4.2",
  "description": "A validator of OpenAPI configurations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "bin/cli.js",
    "dist/*.d.ts",
    "dist/*.d.ts.map",
    "dist/*.js",
    "dist/*.js.map",
    "src/*.ts"
  ],
  "bin": {
    "avocado": "./bin/cli.js"
  },
  "scripts": {
    "integration": "tsc && cd ../azure-rest-api-specs/ && node ../avocado/bin/cli.js",
    "cli": "tsc && node ./bin/cli.js",
    "tsc": "tsc",
    "prettier": "prettier ./src/**/*.ts",
    "tslint": "tslint --project ./",
    "test": "tsc && tslint --project ./ && jest",
    "prepack": "npm install && tsc"
  },
  "jest": {
    "testMatch": [
      "**/dist/test/*.js"
    ],
    "reporters": [ "jest-junit", "default" ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": ["cobertura"]
  },
  "jest-junit": {
    "outputDirectory": ".",
    "outputName": "test-results.xml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/avocado.git"
  },
  "keywords": [
    "openapi",
    "validator"
  ],
  "author": "Microsoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Azure/avocado/issues"
  },
  "homepage": "https://github.com/Azure/avocado#readme",
  "dependencies": {
    "@azure/openapi-markdown": "^0.9.0",
    "@ts-common/async-iterator": "^0.2.0",
    "@ts-common/commonmark-to-markdown": "^1.2.0",
    "@ts-common/fs": "^0.2.0",
    "@ts-common/json-parser": "^0.7.0",
    "@ts-common/string-map": "^0.3.0",
    "@types/js-yaml": "^3.12.1",
    "js-yaml": "^3.13.1",
    "node-object-hash": "^1.4.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.10.4",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "prettier": "^1.17.0",
    "tslint": "^5.16.0",
    "tslint-immutable": "^5.5.2",
    "typescript": "^3.4.5"
  }
}
